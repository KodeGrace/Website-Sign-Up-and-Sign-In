    driver.findElement(By.id("email")).sendKeys("testing");
    // 9 | click | id=create_account_error | 
    driver.findElement(By.id("create_account_error")).click();
    // 10 | click | id=email | 
    driver.findElement(By.id("email")).click();
    // 11 | type | id=email | testing123@gmail.com
    driver.findElement(By.id("email")).sendKeys("testing123@gmail.com");
